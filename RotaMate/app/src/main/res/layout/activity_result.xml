<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- SEÇİLEN ANA ÜLKE BLOĞU -->
        <ImageView
            android:id="@+id/imgCountry"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvCountryName"
            android:text="Ülke Adı"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvScore"
            android:text="Skor: 0"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDescription"
            android:text="Açıklama buraya gelecek"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TOP 3 ÖNERİ BAŞLIK -->
        <TextView
            android:id="@+id/tvTop3Title"
            android:text="Sana En Uygun Diğer 3 Ülke"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 1. ÜLKE -->
        <LinearLayout
            android:id="@+id/top1Container"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTop1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tvTop1"
                android:text="1. öneri"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- 2. ÜLKE -->
        <LinearLayout
            android:id="@+id/top2Container"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTop2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tvTop2"
                android:text="2. öneri"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- 3. ÜLKE -->
        <LinearLayout
            android:id="@+id/top3Container"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTop3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tvTop3"
                android:text="3. öneri"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btnGoHome"
            android:text="Ana sayfaya dön"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
